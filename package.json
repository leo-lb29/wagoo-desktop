{
  "name": "dash-project-maker-fr",
  "version": "1.0.0",
  "main": "main.js",
  "description": "Dashboard Officiel de Project Maker",
  "author": "project-maker.fr",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "appId": "fr.projectmaker.dash",
    "productName": "Dashboard PM",
    "publish": {
      "provider": "github",
      "owner": "ProjectMakerfr",
      "repo": "dash.project-maker.fr"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "package.json"
    ],
    "protocols": [
      {
        "name": "Maille Protocol",
        "schemes": [
          "maille"
        ],
        "role": "Viewer"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "logo.ico"
    }
  },
  "devDependencies": {
    "electron": "^34.3.0",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "@capacitor/android": "^7.0.1",
    "@capacitor/cli": "^7.0.1",
    "@capacitor/core": "^7.0.1",
    "electron-updater": "^6.3.9"
  },
  "keywords": []
}
